<% unless @users.nil? %>
    <% @users.each do |user| %>
        <% if user.username != current_user.username %>
            <% if is_following(user.id) %>
                <div style="text-align: center;">
                  <span class="color">Following</span>  <span><%= user.username %></span>
                </div>
            <% else %>
                <div style="text-align: center;">
                  <span><%= user.username %></span> <span><%= link_to "Follow", followers_path(:follower_id => user), :method => :post %> </span>
                </div><br/>
            <% end %>

        <% end %>
    <% end %>
<% else %>
    <%= render :partial => "shared/no_user", :locals => {:following => false} %>
<% end %>